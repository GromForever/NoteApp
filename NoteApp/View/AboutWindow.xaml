        <TextBlock Grid.Row="0" Text="NoteApp" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBlock Grid.Row="1" Text="v. 1.0.0" FontSize="16" Margin="0,0,0,10"/>
        <TextBlock Grid.Row="2" Text="Автор: Владислав Кормщиков" Margin="0,0,0,10"/>
        <TextBlock Grid.Row="3" Text="e-mail для обратной связи: kormshikov12@mail.ru" Margin="0,0,0,10"/>
